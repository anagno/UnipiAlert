<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
    	<RelativeLayout
    	    android:layout_width="fill_parent"
        	android:layout_height="fill_parent" >
        	    	    
    	    <org.osmdroid.views.MapView 
            	android:id="@+id/map"
            	android:layout_width="fill_parent" 
            	android:layout_height="fill_parent" />
    	       	    
    	    <Button
            	android:id="@+id/buttonTrackingMode"
            	android:layout_width="50dip"
            	android:layout_height="50dip"
				android:layout_margin="5dp"
            	android:layout_alignParentTop="true"
            	android:layout_alignParentEnd="true"
            	android:onClick="trackingMode"
            	android:background="@drawable/btn_tracking_off" />
    	    
    	    <Button
    	        android:id="@+id/buttonCurrentPosition"
    	        android:layout_width="50dip"
    	        android:layout_height="50dip"
    	        android:layout_margin="5dp"
    	        android:layout_alignParentTop="true"
    	        android:layout_toStartOf="@+id/buttonTrackingMode"
    	        android:onClick="currentPosition"
    	        android:background="@drawable/bth_current_position" />

    	    <Button
    	        android:id="@+id/buttonHelp"
    	        android:layout_width="wrap_content"
    	        android:layout_height="180dip"
    	        android:layout_alignParentBottom="true"
    	        android:layout_alignParentEnd="true"
    	        android:layout_alignParentStart="true"
    	        android:onClick="help"
    	        android:text="@string/help" />

		</RelativeLayout>
    	    
                
</LinearLayout>